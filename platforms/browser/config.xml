<?xml version='1.0' encoding='utf-8'?>
<widget id="com.waist.line" version="2.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Waistline</name>
    <description>
        A libre calorie counter including a barcode scanner linked to the Open Food Facts database.
    </description>
    <author email="dave41264@hotmail.com" href="">
        David Healey
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <preference name="SplashScreenDelay" value="1000" />
</widget>
